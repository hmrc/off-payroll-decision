{
  "id": "https://github.com/hmrc/off-payroll-decision-service",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "This schema defines the input message for the Off Payroll Decision Service, the root object is a QuestionSet",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]{1,2}[.][0-9]{1,2}[.][0-9]{1,2}-?[a-zA-Z-_]$"
    },
    "correlationID": {
      "type": "string"
    },
    "result": {
      "type": "string",
      "enum": [
        "Outside IR35",
        "Self-Employed",
        "Inside IR35",
        "Employed"
      ]
    },
    "carryOnWithQuestions": {
      "type": "boolean"
    },
    "score": {
      "type": "object",
      "properties": {
        "personalService": {
          "type": "string",
          "enum": [
            "HIGH",
            "LOW"
          ]
        },
        "controll": {
          "type": "string",
          "enum": [
            "HIGH",
            "LOW"
          ]
        },
        "financialRisk": {
          "type": "string",
          "enum": [
            "HIGH",
            "LOW"
          ]
        },
        "businessStructure": {
          "type": "string",
          "enum": [
            "HIGH",
            "LOW"
          ]
        },
        "partOfOrganisation": {
          "type": "string",
          "enum": [
            "HIGH",
            "LOW"
          ]
        },
        "miscalaneous": {
          "type": "string",
          "enum": [
            "HIGH",
            "LOW"
          ]
        }
      },
      "required": ["personalService"]
    }
  },
  "required": [
    "version",
    "correlationID",
    "carryOnWithQuestions",
    "score"
  ]
}